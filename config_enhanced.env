# Enhanced Semantic RAG System Configuration
# Advanced configuration with AI relationship analysis capabilities

# API Configuration
DATABRICKS_WORKSPACE_URL = "your_databricks_workspace_url"
DATABRICKS_TOKEN = "your_databricks_token"

# Model Endpoints
BGE_EMBEDDING_ENDPOINT = "databricks-bge-large-en"
LLAMA_RELATIONSHIP_ENDPOINT = "databricks-meta-llama-3-3-70b-instruct"
CLAUDE_QA_ENDPOINT = "databricks-claude-3-5-sonnet"

# Vector Database Configuration
CHROMA_DB_PATH = "./data/chroma_db"
COLLECTION_NAME = "semantic_rag_enhanced"

# Processing Configuration
CHUNK_SIZE = 1000
CHUNK_OVERLAP = 200
MAX_TOKENS = 512
TEMPERATURE = 0.1

# Graph Configuration
MIN_RELATIONSHIP_STRENGTH = 0.3
AI_RELATIONSHIP_THRESHOLD = 0.5
GRAPH_OPTIMIZATION_ENABLED = True
MAX_GRAPH_NODES = 10000

# Performance Configuration
BATCH_SIZE = 32
MAX_CONCURRENT_REQUESTS = 10
REQUEST_TIMEOUT = 60
RETRY_ATTEMPTS = 3

# Logging Configuration
LOG_LEVEL = "INFO"
LOG_FORMAT = "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE = "logs/semantic_rag.log"

# Export Configuration
EXPORT_DIRECTORY = "exports"
AUTO_EXPORT = True
EXPORT_FORMAT = "json"

# Visualization Configuration
GRAPH_LAYOUT = "force"
NODE_SIZE_MULTIPLIER = 1.5
EDGE_THICKNESS_MULTIPLIER = 2.0
ENABLE_CLUSTERING = True

# AI Analysis Configuration
AI_RELATIONSHIP_ANALYSIS = True
AI_BATCH_SIZE = 10
AI_ANALYSIS_DEPTH = 3
AI_CONFIDENCE_THRESHOLD = 0.7

# Security Configuration
API_RATE_LIMIT = 100
MAX_FILE_SIZE_MB = 50
ALLOWED_FILE_TYPES = [".pdf", ".csv", ".txt", ".py", ".md"]

# Development Configuration
DEBUG_MODE = False
VERBOSE_LOGGING = True
ENABLE_PROFILING = False
